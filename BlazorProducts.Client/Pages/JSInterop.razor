@page "/jsinterop"

<h3>JS Interoperations</h3>

<div class="row">
    <div class="col">
        Example for calling a JS returning void:
    </div>
    <div class="col">
        <button type="button" class="btn btn-info" @onclick="ShowAlertWindow">click me</button>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-4">
        Example for calling a JS returning something:
    </div>
    <div class="col-2">
        <button type="button" class="btn btn-info" @onclick="RegisterEmail">Register Email</button>
    </div>
    <div class="col-6">
        @_registrationResult
    </div>
</div>
<hr />
<div class="row">
    <div class="col-4">
        Example for calling a JS returning an object:
    </div>
    <div class="col-2">
        <button type="button" class="btn btn-info" @onclick="GetEmailDetails">Get Email Details</button>
    </div>
    <div class="col-6">
        @_emailDetails
    </div>
</div>
<hr />
<div class="row">
    <div class="col-4">
        Passing HTML Reference to JS function:
    </div>
    <div class="col-2">
        <input type="text" @ref="_inputRef" class="form-control" />
    </div>
    <div class="col-6">
        <button type="button" class="btn btn-info" @onclick="FocusAndStyleElement">Focus</button>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-4">
        Passing HTML Reference to JS function:
    </div>
    <div class="col-2">
        <input type="text" @ref="_inputRef" class="form-control" />
    </div>
    <div class="col-6">
        <button type="button" class="btn btn-info" @onclick="FocusAndStyleElement">Focus</button>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-4 alert alert-danger">
        @_errorMessage
    </div>
</div>