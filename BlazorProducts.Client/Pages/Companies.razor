@page "/companies"
@using BlazorProducts.Client.Components

<h3>Companies</h3>

<div class="row">
    <div class="col-md-10">
        <div class="row">
            <div class="col">
                <SearchField OnSearchChanged="SetSearchTerm" />
            </div>
            <div class="col">
                <Sort OnSortChanged="SetSortString" />
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <a class="btn btn-success mb-1" href="/createCompany">new Company</a>
    </div>
</div>

<div class="row">
    <div class="col">
       <CompaniesTable Companies="CompaniesList" />
    </div>
</div>

<div class="row">
    <div class="col">
        <Pagination MetaData="MetaData" Spread="1" SelectedPage="SelectedPage" />
    </div>

    <div class="col">
        <PageSizeDropDown SelectedPageSize="SetPageSize" />
    </div>
</div>